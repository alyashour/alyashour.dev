const ideas = [
  {
    Title: "Framework move",
    Description: "The current CSS/navigation system isn't as clean as I'd like it to be. I'm considering moving to a framework with better support or should I find another way.",
    "Release Version (if planned)": { value: '<p style="color: green">v0.3.0</p>', html: true },
  },
  {
    Title: "Margin/padding in Table Rows",
    Description: "Need to move text inwards so it's not touching the border in tables",
    "Release Version (if planned)": { value: '<p style="color: green">v0.3.0</p>', html: true },
  },
  {
    Title: "Add 404 page",
    Description: "The current 404 page is the default. Should be changed.",
    "Release Version (if planned)": { value: '<p style="color: slategray">Unplanned</p>', html: true}
  },
  {
    Title: "Project Images full Screen",
    Description: "On home page the images should become full screen on click.",
    "Release Version (if planned)": { value: '<p style="color: slategray">Unplanned</p>', html: true}
  },
  {
    Title: "Project page",
    Description: "Create a dedicated projects page.",
    "Release Version (if planned)": { value: '<p style="color: slategray">Unplanned</p>', html: true}
  },
  {
    Title: "Color update",
    Description: "Add more colors to the site + light/dark mode.",
    "Release Version (if planned)": { value: '<p style="color: slategray">Unplanned</p>', html: true}

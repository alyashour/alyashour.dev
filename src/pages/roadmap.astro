  },
  {
    Version: "v0.2.0",
    Title: "Roadmap added (hardcoded)",
    "Date (planned or completed)": { value: '<p style="color: green">31/06/25</p>', html: true },
  },
  {
    Version: "v0.2.1",
    Title: "Currently reading list",
    "Date (planned or completed)": { value: '<p style="color: green">17/07/25</p>', html: true },
  },
  {
    Version: "v0.2.2",
